        "sizes": "200x200",
        "category": ["business", "finance"]
      }
    ],
    "serviceworker": {
      "src": "/MiniVyapar/1.0/sw.js",
      "scope": "/MiniVyapar/1.0/",
      "type": "classic"
    },
    "launch_handler": {
      "client_mode": "navigate-existing"
    },
    "screenshots": [
      {
        "src": "screenshots/screen1.png",
        "sizes": "640x480",
        "type": "image/png",
        "label": "Sales Dashboard"
      },
      {
        "src": "screenshots/screen2.png",
        "sizes": "640x480",

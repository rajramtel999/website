      },
      {
        "name": "Inventory",
        "short_name": "Stock",
        "description": "View or update inventory",
        "url": "/MiniVyapar/1.0/inventory",
        "icons": [{ "src": "icons/inventory.png", "sizes": "96x96", "type": "image/png" }]
      },
      {
        "name": "Reports",
        "short_name": "Reports",
        "description": "View sales and expense reports",
        "url": "/MiniVyapar/1.0/reports",
        "icons": [{ "src": "icons/reports.png", "sizes": "96x96", "type": "image/png" }]
      }
    ],
    "widgets": [
      {
        "name": "Mini Vyapar Sales Widget",
        "short_name": "Sales Widget",
        "description": "Quick overview of your sales",

          "text/csv": [".csv"],
          "application/json": [".json"],
          "text/plain": [".txt"]
        }
      }
    },
    "handle_links": [
      {
        "matches": ["https://khemrajramtel.com.np/MiniVyapar/1.0/*"],
        "action": {
          "navigate": "/MiniVyapar/1.0"
        },
        "preferred_application": true
      }
    ],
    "protocol_handlers": [
      {
        "protocol": "web+minivyapar",
        "url": "https://khemrajramtel.com.np/MiniVyapar/1.0/?url=%s"
      }
    ],
    "share_target": {
      "action": "/MiniVyapar/1.0/share-target",
      "method": "POST",
      "enctype": "multipart/form-data",
      "params": {
        "title": "name",
        "text": "description",
        "url": "link"
      }
    },
    "shortcuts": [
